{
  "name": "demo-project-backend",
  "private": true,
  "version": "0.0.1",
  "license": "UNLICENSED",
  "description": "Backend of demo-project",
  "author": {
    "name": "Raed Chammam",
    "email": "raed.chammam@gmail.com",
    "url": "https://raed.dev"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "lint": "eslint --ext .js,.ts ./src ",
    "lint:fix": "yarn lint --fix",
    "lint:ts": "tsc --noEmit",
    "test": "yarn lint && yarn lint:ts",
    "dev:source": "tsc-watch --noClear --onSuccess \"node --require dotenv/config ./dist/start.js\"",
    "dev:routes": "nodemon --watch ./src/controller -e ts -x \"yarn build:routes\"",
    "dev": "yarn clean && concurrently \"yarn dev:source\" \"yarn dev:routes\"",
    "build:routes": "tsoa spec-and-routes",
    "build:source": "tsc",
    "build": "yarn clean && yarn build:routes && yarn build:source",
    "start": "node --require dotenv/config ./dist/start.js",
    "docker:build": "docker build --tag raedchammam/demo-project-backend .",
    "docker:run": "docker run -d -p 3000:3000 --name backend raedchammam/demo-project-backend",
    "docker:stop-container": "docker stop backend",
    "docker:remove-container": "docker rm backend",
    "docker:remove-image": "docker rmi raedchammam/demo-project-backend"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/command-line-args": "^5.0.0",
    "@types/eslint": "^7.2.11",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.26.4",
    "@types/method-override": "^0.0.31",
    "@types/morgan": "^1.9.3",
    "@types/node": "^14.14.10",
    "@types/stoppable": "^1.1.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.10.0",
    "concurrently": "^6.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.6.0",
    "tsc-watch": "^4.6.0",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "body-parser": "^1.19.2",
    "chalk": "^4.1.1",
    "command-line-args": "^5.2.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.2.0",
    "ioredis": "^4.28.5",
    "kafkajs": "^1.16.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "prom-client": "^13.1.0",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.2",
    "stoppable": "^1.1.0",
    "swagger-ui-express": "^4.3.0",
    "tsoa": "^3.14.1",
    "typeorm": "^0.2.45",
    "uuid": "^8.3.1",
    "winston": "^3.6.0"
  }
}
